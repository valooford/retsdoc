{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "version": "0.1.0",
  "npmClient": "pnpm",
  "command": {
    "publish": {
      "directory": "{workspaceRoot}/dist/{projectRoot}",
      "assets": [
        {
          "from": "config/.package.npmignore",
          "to": ".npmignore"
        },
        {
          "from": "dist/**/!(*.js|*.d.ts|*.map)",
          "to": "./"
        }
      ]
    }
  }
}
